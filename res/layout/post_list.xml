<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <com.parse.ParseImageView
        android:id="@+id/profilephoto"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/txtnick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/profilephoto"
        android:paddingLeft="3dip"
        android:paddingRight="3dip"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txttime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:paddingLeft="3dip"
        android:paddingRight="3dip"
        android:paddingTop="3dip"
        android:textColor="#696969" />

    <TextView
        android:id="@+id/txttitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtnick"
        android:layout_toRightOf="@id/profilephoto"
        android:paddingLeft="3dip"
        android:paddingRight="3dip"
        android:textStyle="bold" />

    <com.parse.ParseImageView
        android:id="@+id/photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txttitle"
        android:maxWidth="300dip"
        android:layout_marginTop="10dip"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/comment"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_below="@+id/photo"
        android:layout_toLeftOf="@+id/commentnum"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_comment" />

    <TextView
        android:id="@+id/commentnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/photo"
        android:layout_toLeftOf="@+id/likeit"
        android:paddingLeft="3dip"
        android:paddingRight="3dip" />

    <ImageButton
        android:id="@+id/likeit"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_below="@+id/photo"
        android:layout_toLeftOf="@+id/likeitnum"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_likeit" />

    <TextView
        android:id="@+id/likeitnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/photo"
        android:paddingLeft="3dip"
        android:paddingRight="6dip" />

</RelativeLayout>